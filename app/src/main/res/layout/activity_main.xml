<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.gjb.babyplan.MainActivity"
    android:background="#f7aa05">

    <Button
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/btntowish"
        android:background="@drawable/wish"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="40dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="零花钱"
        android:id="@+id/linghuaqian"
        android:textSize="30sp"
        android:layout_below="@+id/btntodiligence"
        android:layout_centerHorizontal="true" />

    <FrameLayout
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:background="@drawable/gjb_pkt"
        android:id="@+id/frameLayout"
        android:layout_below="@+id/btntowish"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pktmoney"
            android:textSize="80sp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center" />
    </FrameLayout>

    <Button
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:id="@+id/btntodiligence"
        android:background="@drawable/love"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12"
        android:id="@+id/textView"
        android:textSize="25sp"
        android:layout_alignTop="@+id/btntodiligence"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@drawable/round_rect_shape1">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/totask"
            android:text="小任务"
            android:background="@drawable/round_rect_shape1"
            android:layout_gravity="left"
            android:textSize="13sp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Baby time"
            android:id="@+id/btntomem"
            android:background="@drawable/round_rect_shape1"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我"
            android:id="@+id/btntome"
            android:background="@drawable/round_rect_shape1" />

    </LinearLayout>



</RelativeLayout>
