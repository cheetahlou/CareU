<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gjb.babyplan.AddNickNameActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#c9eec9"
        android:id="@+id/rl5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置或更改昵称"
            android:layout_alignParentTop="false"
            android:textSize="25sp"
            android:layout_centerInParent="true" />

        <Button
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/btnback"
            android:background="@drawable/back"
            android:layout_alignParentTop="false"
            android:layout_alignParentStart="true"
            android:layout_alignWithParentIfMissing="false"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp" />

        <Button
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="保存"
            android:background="@drawable/round_rect_shape2"
            android:layout_centerVertical="true"
            android:id="@+id/btnsavename"
            android:layout_marginRight="10dp"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl5"
        android:layout_margin="10dp"
        android:orientation="vertical">
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etaddname"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="好名字可以让你的朋友们更容易记住你。"
            android:textSize="15sp"
            android:layout_marginLeft="5dp
            "/>
    </LinearLayout>
</RelativeLayout>
